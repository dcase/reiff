<% content_for :title do %><%=h @bio.seo_profile.title %><% end %>
<% content_for :seo_keywords do %><%=h @bio.seo_profile.keywords %><% end %>
<% content_for :seo_description do %><%=h @bio.seo_profile.description %><% end %>
<% content_for :seo_heading do %><%=h @bio.seo_profile.heading %><% end %>
<% content_for :body_class do %>section-principals<% end %>
<% content_for :container_class do %>bio<% end %>
<% content_for :page_heading do %>
	<h3 id="section-heading">Principals</h3>
<% end %>
<% content_for :sidebar do %>
	<% if @bios.length > 1 %>
		<div id="sidebar">
			<%= render :partial => 'menu' %>
		</div>
	<% end %>
<% end %>
<div id="page"<%= " class=\"has-sidebar\"" if @bios.length > 1%>>
	<div id="page_sections_container">
		<%= render :partial => "bio" %>
	</div>
</div>

<% content_for :admin_toolbar do %>
	<% if authorized? %>
		<li><%= image_tag 'add.png', :size => "16x16" %><%= link_to 'Add Bio', new_bio_path, :class => "modal update_content" %></li>
	<% end %>
	<% if authorized_preview? %>
		<li><%= image_tag 'fail.png', :size => "16x16" %><%= link_to 'Turn off preview', :controller => 'bios', :action => 'show', :id => @bio, :site_section_id => @site_section %></li>
	<% elsif authorized? %>
		<li><%= image_tag 'preview.png', :size => "16x16" %><%= link_to 'Preview Page', :controller => 'bios', :action => 'show', :id => @bio, :site_section_id => @site_section, :admin => 'false' %></li>
	<% end %>
<% end %>

