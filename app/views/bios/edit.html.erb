<h1>Edit Bio</h1>

<% form_for(@bio, :html => { :multipart => true, :class => "ajax" }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <label>Bio (uses <a href="http://www.textism.com/tools/textile/" target="_blank">Textile</a>):</label><br />
    <%= f.text_area :bio %>
  </p>
  <p>Current Photo: <%= image_tag @bio.photo.url %></p>
  <p>
    <label>Replace photo:</label><br />
    <%= f.file_field :photo %>
  </p>
  <%= render :partial => "seo_profiles/form_include", :locals => { :f => f } %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', @bio %>