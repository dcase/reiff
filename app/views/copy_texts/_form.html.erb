<% form_for(@copy_text, :html => { :class => 'ajax'}) do |f| %>
  <%= f.error_messages %>
  
  <%= render :partial => 'page_sections/form_include'%>

  <p>
    <label>Text (uses <a href="http://www.textism.com/tools/textile/" target="_blank">Textile</a>):</label><br />
    <%= f.text_area :output %>
  </p>
  <p>
    <%= f.submit "Submit", :class => 'submit' %>
  </p>
<% end %>